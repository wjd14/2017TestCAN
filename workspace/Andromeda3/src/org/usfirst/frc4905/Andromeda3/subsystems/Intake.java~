    public void manualIntake(Joystick scaleIntakeGamePad){
    	
    	boolean inButton = scaleIntakeGamePad.getRawButton(1);
    	boolean outButton = scaleIntakeGamePad.getRawButton(2);
    	
    	if(inButton){
    		
    		intakeController.set(1);
    		
    	}else if(outButton){
    		
    		intakeController.set(-1);
    		
    	}
    	
    }
    
    public void stop(){
    	
    	intakeController.set(0);
    	
    }
    
    
